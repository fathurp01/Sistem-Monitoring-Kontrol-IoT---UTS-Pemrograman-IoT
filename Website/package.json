{
  "name": "uts-iot-project",
  "version": "1.0.0",
  "description": "UTS Pemrograman IoT - Complete MQTT + MySQL + Express + React System",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "start:mqtt": "mosquitto -v",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run dev",
    "test": "cd backend && npm test",
    "publish-test": "node tools/publish_test.js",
    "verify": "node tools/verify_setup.js",
    "db:import": "mysql -u root -p < database/schema.sql",
    "db:seed": "node database/seed_generator.js"
  },
  "keywords": [
    "iot",
    "mqtt",
    "mysql",
    "express",
    "react",
    "esp32"
  ],
  "author": "UTS Pemrograman IoT Student",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
